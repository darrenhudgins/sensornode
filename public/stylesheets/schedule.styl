.schedule-week-heading
    box-shadow: 1px 1px 5px 0 #CCC
    margin-left: auto
    margin-right: auto
    margin-top: 0
    max-width: 623px
    padding: 15px
    position: relative
    text-align: center

    select
        font-size: 18px
        vertical-align: middle

    a.prev-week-link,
    a.next-week-link
        display: block
        font-size: 13px
        height: 30px
        line-height: 30px
        margin-top: -15px
        padding: 0 15px
        position: absolute
        left: 0
        top: 50%

    a.next-week-link
        left: auto
        right: 0

    @media (max-width: 590px)
        margin-top: 0
        min-width: 100%
        padding: 15px 0 45px
        width: 100%

        a.prev-week-link
            border-right: 1px solid #EEE

        a.next-week-link
            border-left: 1px solid #EEE

        a.prev-week-link,
        a.next-week-link
            bottom: 0
            border-top: 1px solid #EEE
            margin-top: 15px
            padding: 0
            top: auto
            width: 50%

.section-schedule h3
    text-align: center

.weekly-recap
    font-size: 14px
    margin: 0 auto
    max-width: 590px

    .weekly-recap-edit

        textarea
            box-sizing: border-box
            font-size: 14px
            min-height: 300px
            width: 100%

    .weekly-recap-content
        max-width: 590px

        blockquote
            font-family: Georgia,serif

            @media (max-width: 590px)
                margin-left: 0
                margin-right: 0

        hr
            margin: 30px 0

        li
            margin: 5px 0

    .edit-recap,
    .save-recap
        border-top: 1px solid #CCC
        margin-top: 20px
        padding-top: 10px
        text-align: right

        #cancelEditRecap
            float: left

    @media (max-width: 590px)
        font-size: 13px
        padding: 0 15px

        ul
            padding-left: 25px

.no-data-message
    line-height: 22px
    margin: 60px 0
    text-align: center

.schedule-list
    margin: 15px auto
    max-width: 800px
    padding: 0
    text-align: center

.schedule-list-item
    background: #FFF
    box-shadow: 1px 1px 5px 0 #CCC
    display: inline-block
    list-style: none
    margin: 0 0 15px
    padding: 5px
    position: relative
    text-align: left

    &.disabled
        background: #EFEFEF
        border-radius: 5px
        opacity: 0.8

    @media (max-width: 590px)
        margin: 0 0 3px

    .separator
        display: inline-block
        font-size: 14px
        height: 50px
        line-height: 48px
        padding: 0 5px
        text-align: center
        vertical-align: top
        width: 25px

        @media (max-width: 590px)
            display: none

    .datetime
        height: 40px
        font-size: 14px
        left: -110px
        line-height: 20px
        position: absolute
        text-align: right
        text-transform: uppercase
        top: 10px
        width: 100px

        .date,
        .time
            white-space: nowrap

        a
            font-size: 12px
            text-transform: none

        @media (max-width: 500px)
            display: none

    .pick-spread
        font-size: 10px
        height: 28px
        line-height: 14px
        padding: 6px 0
        position: absolute
        right: -110px
        top: 10px
        width: 100px

        p
            margin: 0

        @media (max-width: 500px)
            display: none

    .point-difference
        background: linear-gradient(top, #EEE, 85% #FFF)
        border-radius: 3px
        font-size: 11px
        display: none
        font-weight: bold
        margin-top: 5px
        padding: 4px 5px 0
        position: relative
        text-align: right
        text-transform: uppercase

        &.correct-difference
            color: #358937

        &.incorrect-difference
            color: #900

        input
            margin-left: 5px
            padding: 3px
            width: 45px

        a.view-details-link
            color: #00295B
            display: block
            height: 16px
            left: 0
            line-height: 16px
            margin-top: -8px
            padding: 2px 5px
            position: absolute
            top: 50%

            @media (max-width: 500px)
                display: block

&.disabled .point-difference
    background: linear-gradient(top, #DDD, 85% #EEE)

&.away-selected .point-difference
&.home-selected .point-difference
    display: block

.team
    border-radius: 5px
    display: inline-block
    height: 40px
    line-height: 19px
    margin: 0
    padding: 5px 5px 5px 69px
    position: relative
    width: 115px

    .team-name,
    .team-city
        white-space: nowrap

    .score
        color: #000
        display: block
        font-size: 16px
        font-weight: bold
        height: 20px
        line-height: 20px
        margin-top: -10px
        position: absolute
        right: 3px
        top: 50%

        @media (max-width: 590px)
            font-size: 12px

    &:before
        background: transparent url(/images/teams/eagles.svg) no-repeat 0 0
        background-size: 59px 40px
        content: ""
        display: block
        height: 40px
        left: 5px
        position: absolute
        top: 5px
        width: 59px

    &.home
        padding-left: 5px
        padding-right: 69px
        text-align: right

        &:before
            left: auto
            right: 5px

        .score
            left: 3px
            right: auto

    &.winner
        border: 2px solid #FDC131
        box-shadow: 0 0 2px 1px gold
        padding: 3px 3px 3px 67px

        &:before
            left: 3px
            top: 3px

        &.home
            padding-left: 3px
            padding-right: 67px

            &:before
                left: auto
                right: 3px

    @media (max-width: 590px)
        border-radius: 3px
        font-size: 12px
        margin-right: 4px
        width: 79px

        &.home
            margin-right: 0

a.team:hover
    background: #7FD3F7
    color: #FFF

.away-selected .team.away,
.home-selected .team.home,
a.team:active,
a.team.selected:hover
    background: #00B7FF
    color: #FFF

.disabled.away-selected .team.away,
.disabled.home-selected .team.home
    background: #888

