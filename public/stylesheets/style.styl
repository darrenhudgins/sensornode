@import "nib"
@require "normalize.css"

html
    background: linear-gradient(top, #FFF 50%, #DDD)
    background-attachment: fixed
    height: 100%

body
    height: 100%
    margin: 0
    padding: 0
    font: 16px "Lucida Grande", Helvetica, Arial, sans-serif

.wrapper
    min-height: 100%
    height: auto !important
    height: 100%
    margin: 0 auto -105px
    position: relative

.push
    height: 105px

a
    color: #00B7FF

input[type="number"],
input[type="date"],
input[type="email"],
input[type="password"],
input[type="text"]
    border: 1px solid #EFEFEF
    border-right-color: #DDD
    border-top-color: #DDD
    border-radius: 3px
    box-shadow: inset 0 0 2px 0px #CCC
    box-sizing: border-box
    padding: 7px
    width: 100%

button
    background: #00B7FF
    background: linear-gradient(top, #7FD3F7, #00B7FF)
    border: 1px solid #00B7FF
    border-radius: 5px
    color: #FFF
    cursor: pointer
    padding: 7px 0
    width: 100%

    &:hover
        background: #00B7FF

.hide
    display: none

.error
    color: #F00

.placeholder-visible
    color: #999

header
    background: #222

    h1
        color: #FFF
        font-family: "Georgia Pro",georgia,serif
        font-weight: normal
        margin: 0
        padding: 30px
        text-align: center
        text-transform: uppercase

        @media (max-width: 590px)
            font-size: 20px
            padding: 15px

nav

    ul
        background: #000
        margin: 0
        padding: 0
        text-align: center

    li
        display: inline-block
        list-style: none
        margin: 0
        
        a
            border-right: 1px solid #333
            color: #FFF
            display: block
            height: 45px
            line-height: 44px
            padding: 0 15px
            text-decoration: none
            transition: background-color 0.25s ease-in-out

            &:hover
                background: #222

            @media (max-width: 590px)
                font-size: 13px
                height: 30px
                line-height: 29px
                padding: 0 8px

        &:last-child a
            border-right: none

main
    margin: 0 auto
    max-width: 960px

footer
    background: #CCC
    border-top: 1px solid #BBB
    font-size: 14px
    height: 44px
    line-height: 22px
    margin: 30px 0 0
    padding: 15px 0
    position: relative
    text-align: center
    z-index: 1

    p
        line-height: 22px
        margin: 0

    a
        color: #00295B

@require "account"
@require "admin"
@require "dashboard"
@require "event"
@require "login"
@require "static"
@require "schedule"
@require "device"
